<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/battery_state_main_ll"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="80dp"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/battery_progress_speed"
        style="@style/battery_pb_tv_style"
        android:layout_centerInParent="true"
        android:background="@drawable/icon_screen_battery"
        android:text="@string/battery_speed" />

    <TextView
        android:id="@+id/battery_progress_storage"
        style="@style/battery_pb_tv_style"
        android:layout_alignLeft="@id/battery_progress_speed"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="24dp"
        android:background="@drawable/icon_screen_storage"
        android:text="@string/battery_storage" />


    <TextView
        android:id="@+id/battery_progress_flashlight"
        style="@style/battery_pb_tv_style"
        android:layout_alignParentRight="true"
        android:layout_alignRight="@id/battery_progress_speed"
        android:layout_marginRight="24dp"
        android:background="@drawable/icon_screen_storage"
        android:text="@string/battery_cpu" />
</RelativeLayout>